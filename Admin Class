import java.util.ArrayList;
public class Admin extends User{
    private ArrayList<Customer> customers; // list of customers managed by admin

    public Admin(String name, String id) {
        super(name, id);
        customers = new ArrayList<>();
    }

    // Add a customer
    public void addCustomer(Customer c) {
        customers.add(c);
        System.out.println("Customer " + c.name + " added by Admin.");
    }

    // Remove a customer
    public void removeCustomer(Customer c) {
        if (customers.remove(c)) {
            System.out.println("Customer " + c.name + " removed by Admin.");
        } else {
            System.out.println("Customer not found.");
        }
    }

    // Show all customers
    public void showCustomers() {
        System.out.println("Customers managed by Admin " + name + ":");
        if (customers.isEmpty()) {
            System.out.println("(none)");
        } else {
            for (Customer c : customers) {
                System.out.println("- " + c.name + " (ID: " + c.ID + ")");
            }
        }
    }

    // Admin can view a customer's cart
    public void viewCustomerCart(Customer c) {
        System.out.println("Cart for " + c.name + ":");
        c.getCart().forEach(p -> System.out.println("- " + p.getProduct() + " $" + p.getPrice()));
    }
}
